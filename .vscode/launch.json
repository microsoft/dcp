{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "dcpd launch",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/dcpd/main.go",
            "args": [
                "-v=1"
            ],
        },

        {
            "name": "dcpctrl run-controllers",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/dcpctrl/main.go",
            "args": [
                "run-controllers",
                "-v=1"
            ],
        },

        {
            "name": "dcp start-apiserver",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/bin/dcp",
            "args": [
                "start-apiserver",
                "-v=1"
            ],
            "preLaunchTask": "compile"
        },

        {
            "name": "attach to controllers process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "dcpctrl"
        },

        {
            "name": "attach to process...",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}"
        }
    ]
}