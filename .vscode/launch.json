{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "dcpd launch",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/dcpd/main.go",
            "args": [
                "-v=1"
            ],
        },

        {
            "name": "dcp start-apiserver",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/dcp/main.go",
            "args": [
                "start-apiserver",
                "-v=1"
            ],
            "env": {
                "DCP_EXTENSIONS_PATH": "${workspaceFolder}/bin/ext"
            },
            "preLaunchTask": "compile"
        },

        {
            "name": "dcp up todo-csharp-sql-swa-func",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/dcp/main.go",
            "args": [
                "--root-dir", "${workspaceFolder}/../todo-csharp-sql-swa-func",
                "up",
                "-v=1"
            ],
        },

        {
            "name": "render-workload todo C# func SQL",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/azdRenderer/azdRenderer.go",
            "args": [
                "render-workload",
                "--root-dir", "${workspaceFolder}/../todo-csharp-sql-swa-func",
                "-v=1"
            ],
        },

        {
            "name": "run-controllers for todo C# func SQL",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/dcpctrl/dcpctrl.go",
            "args": [
                "run-controllers",
                "-v=1"
            ],
            "cwd": "${workspaceFolder}/../todo-csharp-sql-swa-func"
        },

        {
            "name": "attach to controllers process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "dcpctrl"
        }
    ]
}